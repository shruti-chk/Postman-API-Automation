		{
			"name": "List of Books",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"pm.test(\"Status code is 200\", function () {\r",
							"    pm.response.to.have.status(200);\r",
							"});\r",
							"\r",
							"const response = pm.response.json();\r",
							"\r",
							"const nonFictionBook = response.filter((eachBook) => {\r",
							"    if(eachBook.available == true){\r",
							"            return eachBook;\r",
							"\r",
							"    }\r",
							"});\r",
							"\r",
							"const firstBook = nonFictionBook[0];\r",
							"pm.test(\"First Book is Non-Fiction\", function(){\r",
							"    pm.expect(firstBook.type).to.eql(\"non-fiction\");\r",
							"});\r",
							"pm.test(\"First Book is available\", function(){\r",
							"    pm.expect(firstBook.available).to.true;\r",
							"});\r",
							"\r",
							"pm.globals.set(\"bookId\", firstBook.id);\r",
							""
						],
						"type": "text/javascript"
					}
				}
			],
			"request": {
				"method": "GET",
				"header": [],
				"url": {
					"raw": "{{baseURL}}/books?type=non-fiction",
					"host": [
						"{{baseURL}}"
					],
					"path": [
